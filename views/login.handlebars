<form action='/login' method='post'>
    <label for='username'>Username</label>
    <input
        type='username'
        id='username'
        name='username'
        placeholder='Username'
        required
    />
    <label for='password'>Password</label>
    <input
        type='password'
        id='password'
        name='password'
        placeholder='Password'
        required
    />

    <button type='submit'>Submit</button>
</form>